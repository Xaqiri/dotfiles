# Prevent default Mac behavior of hiding active window
# cmd - h : skhd -k ""
# open wezterm
# cmd - return : /Applications/WezTerm.app/Contents/MacOS/wezterm-gui --single-instance -d ~
cmd - return : open -na WezTerm
# open kitty
# /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
cmd + shift - return : open -na kitty
# close focused window
cmd - w : yabai -m window --close; yabai -m window --focus prev

# Vim mode
:: vim : yabai -m config active_window_border_color 0xff00ff00
:: default : yabai -m config active_window_border_color 0xff0398fc
default < fn - f ; vim
vim < fn - f ; default

# Use hjkl as arrow keys in vim mode
vim < h : skhd -k "left"
vim < j : skhd -k "down" 
vim < k : skhd -k "up"
vim < l : skhd -k "right"
vim < u : skhd -k 'cmd - 0x7E'
vim < d : skhd -k 'cmd - 0x7D'

# Move windows between spaces
vim < cmd - n : yabai -m space --create
vim < cmd - d : yabai -m space --destroy
vim < shift + cmd - h : yabai -m window --space prev; yabai -m space --focus prev 
vim < shift + cmd - l : yabai -m window --space next; yabai -m space --focus next 

# Move between spaces
vim < cmd - h : yabai -m space --focus prev
vim < cmd - l : yabai -m space --focus next
vim < shift + cmd - j : yabai -m window --space 3

# focus window
vim, default < alt - h : yabai -m window --focus west
vim, default < alt - j : yabai -m window --focus south
vim, default < alt - k : yabai -m window --focus north
vim, default < alt - l : yabai -m window --focus east

cmd - h: yabai -m display --focus west
cmd - j : yabai -m display --focus south 
cmd - k : yabai -m display --focus north
cmd - l : yabai -m display --focus east

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east
shift + ctrl - h : yabai -m window --display west; yabai -m display --focus west
shift + ctrl - j : yabai -m window --display south; yabai -m display --focus south
shift + ctrl - k : yabai -m window --display north; yabai -m display --focus north
shift + ctrl - l : yabai -m window --display east; yabai -m display --focus east

# change region size up/right
shift + alt - w : yabai -m window --resize top:0:-100
shift + alt - a : yabai -m window --resize right:-100:0
shift + alt - s : yabai -m window --resize top:0:100
shift + alt - d : yabai -m window --resize right:100:0

# change region size bottom/left
shift + cmd - w : yabai -m window --resize bottom:0:-100
shift + cmd - a : yabai -m window --resize left:-100:0
shift + cmd - s : yabai -m window --resize bottom:0:100
shift + cmd - d : yabai -m window --resize left:100:0

# rotate tree
alt - r : yabai -m space --rotate 270
shift + alt - r : yabai -m space --rotate 90

# mirror tree 
alt - y : yabai -m space --mirror y-axis
alt - x : yabai -m space --mirror x-axis

# toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
# shift + alt - f : yabai -m window --toggle native-fullscreen

# toggle window split type
alt - e : yabai -m window --toggle split

# change layout of desktop
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - s : yabai -m space --layout monocle
ctrl + alt - d : yabai -m space --layout float

# snap floating windows to grid
# fn - a : yabai -m window --grid 1:3:0:0:
fn - s : yabai -m window --toggle float; yabai -m window --grid 1:10:1:0:8:1
fn - d : yabai -m window --toggle float; yabai -m window --grid 10:10:1:1:8:8

